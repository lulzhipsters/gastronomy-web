---
import { string } from 'astro:schema';
import Layout from '../layouts/Layout.astro';
import { getCollection } from "astro:content";

interface TitledElement {
    id: string;
    rendered?: { html: string };
    data?: { title?: string };

}

const compareId = (a: { id: string }, b: { id: string }) => {
    if (a.id > b.id) { return 1 };
    if (a.id < b.id) { return -1 };
    return 0;
};

const guessTitle = (element: TitledElement) => {
    if (element.rendered?.html)
    {
        const matches = new RegExp("<h1>(.+)<\/h1>").exec(element.rendered.html);

        if (matches){
            return matches[0]
        }
    }

    let fromId =  element.id
        .split("/")
        .findLast(_ => true)
        ?.replaceAll("-", " ")
        .trimStart() || "";

    // Uppercase start
    fromId = fromId.charAt(0).toUpperCase() + fromId.slice(1);

    return fromId;
}

const path = (id: string) => {
    let parts = id.split("/");
    return parts.slice(0, parts.length - 1).join("/");
}

const recipes = (await getCollection("recipes")).toSorted(compareId);
const techniques = (await getCollection("techniques")).toSorted(compareId);
---
<Layout>
    <div class="collapse bg-base-100 border border-base-300">
        <input type="radio" name="accordion-1" checked="checked" />
        <div class="collapse-title font-semibold">About</div>
        <div class="collapse-content prose">
            
        </div>
    </div>
    <div class="collapse bg-base-100 border border-base-300">
        <input type="radio" name="accordion-1" />
        <div class="collapse-title font-semibold">Recipes</div>
        <div class="collapse-content prose">
            <ul>
                { recipes.map(recipe => (
                    <li>
                        { path(recipe.id) 
                            ? <span>{path(recipe.id)} /</span>
                            : <span></span>
                        }
                        <a href={ `/recipes/${recipe.id}` } >
                            { recipe.data.title || guessTitle(recipe) }
                        </a>
                        <div hidden>{ JSON.stringify(recipe) }</div>
                    </li>
                )) }
            </ul>
        </div>
    </div>
    <div class="collapse bg-base-100 border border-base-300">
        <input type="radio" name="accordion-1" />
        <div class="collapse-title font-semibold">Techniques</div>
        <div class="collapse-content prose">
            <ul>
                { techniques.map(tech => (
                    <li>
                        { path(tech.id) 
                            ? <span>{path(tech.id)} /</span>
                            : <span></span>
                        }
                        <a href={ `/techniques/${tech.id}`} >
                            { tech.data.title || guessTitle(tech) }
                        </a>
                        <div hidden>{ JSON.stringify(tech) }</div>
                    </li>
                )) }
            </ul></div>
    </div>
    
</Layout>
